#1) Faça cada quadrado ter uma cor

import turtle

turtle = turtle.Turtle()

for _ in range(4):
    turtle.color('pink')
    turtle.forward(100)
    turtle.right(90)

for _ in range(4):
   turtle.color('blue') 
   turtle.left(90)
   turtle.forward(100)

for _ in range(4):
   turtle.color('black') 
   turtle.forward(100)
   turtle.left(90)

for _ in range(4):
   turtle.color('green') 
   turtle.right(90)
   turtle.forward(100)

#2) Faça cada quadrado com um formato diferente da tartaruga

import turtle

turtle = turtle.Turtle()

for _ in range(4):
    turtle.shape('circle')
    turtle.forward(100)
    turtle.right(90)

for _ in range(4):
   turtle.shape('arrow')
   turtle.left(90)
   turtle.forward(100)

for _ in range(4):
   turtle.shape('classic')
   turtle.forward(100)
   turtle.left(90)

for _ in range(4):
   turtle.shape('square') 
   turtle.right(90)
   turtle.forward(100)

