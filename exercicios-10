#3) Faça os quadrados não se tocarem

import turtle

turtle = turtle.Turtle()

for _ in range(4):
    turtle.forward(100)
    turtle.right(90)

turtle.up()
turtle.backward(10)
turtle.down()


for _ in range(4):
   turtle.left(90)
   turtle.forward(100)

turtle.up()
turtle.forward(10)
turtle.down()   

for _ in range(4):
   turtle.forward(100)
   turtle.left(90)

turtle.up()
turtle.backward(10)
turtle.down()

for _ in range(4):
   turtle.right(90)
   turtle.forward(100)

