#1) Faça cada passo da tartaruga ter uma cor diferente
import turtle
import random
turtle = turtle.Turtle()
colors = ('green','blue','pink','black','red',)
for c in range(360):
    color = random.choice(color)
    turtle.color('red')
    turtle.forward(1)
    turtle.right(1)
#2) Aumente/diminua o diâmetro do círculo


import turtle

turtle = turtle.Turtle()

for c in range(200):
    turtle.color('red')
    turtle.forward(5)
    turtle.right(2)